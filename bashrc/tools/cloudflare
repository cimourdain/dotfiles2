#!/bin/bash

# Install
# $ yay -S cloudflare-warp-bin
# $ sudo systemctl start warp-svc
# $ warp-cli registration new
# $ warp-cli teams-enroll aviv-group


CLOUDFLARE_SERVICE_NAME=warp-svc

function cfs {
    sudo systemctl start ${CLOUDFLARE_SERVICE_NAME}
    echo "‚è∞ Wait for service ${CLOUDFLARE_SERVICE_NAME} to start"
    while true; do
        if [ $(systemctl is-active ${CLOUDFLARE_SERVICE_NAME}) == "active" ]; then
            break
        fi
        sleep 1
    done

    echo "üëß Connect"
    warp-cli connect
}

function cfk {
    sudo systemctl stop ${CLOUDFLARE_SERVICE_NAME}
}