update_docker_configuration() {
    echo >&2 "ðŸ³ Update Docker configuration"
    echo >&2 "ðŸ’¡https://avivgroup.atlassian.net/wiki/x/nYCOLw"

    local docker_daemon_config="${1}"

    echo >&2 "ðŸ‘· Update /etc/docker/daemon.json file"
    echo "${docker_daemon_config}" | sudo tee /etc/docker/daemon.json

    echo >&2 "ðŸ‘“ Verify the content of the daemon config file"
    cat /etc/docker/daemon.json

    echo >&2 "ðŸš“ Stop all docker containers"
    docker stop "$(docker ps -a -q)"
	docker rm "$(docker ps -a -q)"

    echo >&2 "ðŸ’€ Delete docker networks"
    docker network prune

    echo >&2 "ðŸš€ Restart docker service"
    sudo systemctl restart docker.service
}

cfs() {
    start_service ${CLOUDFLARE_SERVICE_NAME}

    echo >&2 "â° Wait for Daemon ${CLOUDFLARE_SERVICE_NAME} to start"
    sleep 2

    local warp_cli_settings=$(warp-cli settings)
    if [ "$?" != "0" ];then
        echo >&2 "ðŸ‘§ Connect"
        warp-cli connect
    else
        echo >&2 "âœ… Warp Client already connected"
    fi

    update_docker_configuration "${CLOUDFLARE_DOCKER_DAEMON_JSON}"

    echo >&2 "ðŸ”€ Use Cloudflare DNS"
    set_dns "cloudflare"

    echo >&2 "ðŸ”€ Flush DNS Cache"
    sudo resolvectl flush-caches
    # echo >&2 "ðŸ”€ Use Google DNS"
    # set_dns "google"
}

cfk() {
    # Stop cloudFlare
    sudo systemctl stop ${CLOUDFLARE_SERVICE_NAME}

    echo >&2 "ðŸ”€ Reset DNS to default"
    set_dns

    # update_docker_configuration "${DEFAULT_DOCKER_DAEMON_JSON}"
}